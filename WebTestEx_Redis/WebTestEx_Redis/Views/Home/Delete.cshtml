@model WebTestEx_Redis.Models.User

<h2>Delete User</h2>

<p>Are you sure you want to delete this user?</p>

<table class="table">
    <tr>
        <th>UserId</th>
        <td>@Model.UserId</td>
    </tr>
    <tr>
        <th>UserName</th>
        <td>@Model.UserName</td>
    </tr>

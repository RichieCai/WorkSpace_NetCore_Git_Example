@model testModel.Models.ShowVM

 @{
    ViewData["Title"] = "Show";
}

<form asp-action="Show">
    <div class="row">
        <div class="col-3">
            @Html.TextBoxFor(model =>  Model.Id, new { @class = "form-control ", placeholder = "Id"})
        </div>
        <div class="col-3">
            @Html.TextBoxFor(model => Model.Name, new { @class = "form-control ", placeholder = "Name"})
        </div>
    </div>
    <div class="row">
        @for (var i = 0; i < Model.listShow.Count; i++)
        {
            <div class="row rowdata" id="row">
                <div class="col-3">
                    <button type=button id="del2">delete txt2</button>
                    <button type=button id="del3" onclick="funDelItem(this)">delete this my</button>
                </div>
                <div class="col-3">
                    @Html.TextBoxFor(model =>  Model.listShow[i].userId, new { @class = "form-control ", placeholder = "userId"})
                </div>
                <div class="col-3">
                    @Html.TextBoxFor(model => Model.listShow[i].title, new { @class = "form-control ", placeholder = "title"})
                </div>
                <div class="col-3">
                    @Html.TextBoxFor(model => Model.listShow[i].completed, new { @class = "form-control", placeholder = "completed" })
                </div>
            </div>
        }
           <a asp-action="DelPage">Back to List</a>
    </div>
</form>
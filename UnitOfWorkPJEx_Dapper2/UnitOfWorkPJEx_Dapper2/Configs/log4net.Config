<?xml version="1.0" encoding="utf-8" ?>
<log4net>
	<!-- Define some output appenders -->
	<!--info-->
	<appender name="InfoFileAppender" type="log4net.Appender.RollingFileAppender">
		<!--    value="logs/log.log"-->
		<file type="log4net.Util.PatternString"  value="logs\info\log_%date{yyyyy-MM-dd}.log" />
		<!--指定是否將日誌附加到現有日誌檔案中-->
		<appendToFile value="true" />
		<!--防止多线程时不能写Log,官方说线程非安全-->
		<lockingModel type="log4net.Appender.FileAppender+MinimalLock" />
		<!--可以为:Once|Size|Date|Composite-->
		<!--Composite为Size和Date的组合-->
		<!--滾動文件的方式-->
		<rollingStyle value="Date" />
		<!--当备份文件时,为文件名加的后缀-->
		<datePattern value="yyyy-MM-dd" />
		<!--日誌檔案的最大個數,都是最新的-->
		<!--rollingStyle节点为Size时,只能有value个日志-->
		<!--rollingStyle节点为Composite时,每天有value个日志-->
		<maxSizeRollBackups value="10" />
		<!--日誌檔案的大小:KB|MB|GB-->
		<maximumFileSize value="1MB" />
		<!--置为true,当前最新日志文件名永远为file节中的名字-->
		<staticLogFileName value="false" />
		<!--定義過濾 输出级别在INFO和ERROR之间的日志-->
		<filter type="log4net.Filter.LevelRangeFilter">
			<levelMin value="INFO" />
			<levelMax value="INFO" />
		</filter>
		<layout type="log4net.Layout.PatternLayout">
			<!--指定日志消息的格式，包括日期、线程、日志级别、日志记录器名称和消息-->
			<conversionPattern value="%date [%thread] %-5level %logger - %message%newline"/>
		</layout>
	</appender>

	<!--error-->
	<appender name="ErrorFileAppender" type="log4net.Appender.RollingFileAppender">
		<!--    value="logs/log.log"-->
		<file type="log4net.Util.PatternString"  value="logs\error\log_%date{yyyyy-MM-dd}.log" />
		<!--指定是否將日誌附加到現有日誌檔案中-->
		<appendToFile value="true" />
		<!--防止多线程时不能写Log,官方说线程非安全-->
		<lockingModel type="log4net.Appender.FileAppender+MinimalLock" />
		<!--可以为:Once|Size|Date|Composite-->
		<!--Composite为Size和Date的组合-->
		<!--滾動文件的方式-->
		<rollingStyle value="Composite" />
		<!--当备份文件时,为文件名加的后缀-->
		<datePattern value="yyyy-MM-dd" />
		<!--日誌檔案的最大個數,都是最新的-->
		<!--rollingStyle节点为Size时,只能有value个日志-->
		<!--rollingStyle节点为Composite时,每天有value个日志-->
		<maxSizeRollBackups value="10" />
		<!--日誌檔案的大小:KB|MB|GB-->
		<maximumFileSize value="1MB" />
		<!--置为true,当前最新日志文件名永远为file节中的名字-->
		<staticLogFileName value="false" />
		<!--定義過濾 输出级别在INFO和ERROR之间的日志-->
		<filter type="log4net.Filter.LevelRangeFilter">
			<levelMin value="ERROR" />
			<levelMax value="ERROR" />
		</filter>
		<layout type="log4net.Layout.PatternLayout">
			<!--指定日志消息的格式，包括日期、线程、日志级别、日志记录器名称和消息-->
			<conversionPattern value="%date [%thread] %-5level %logger - %message%newline"/>
		</layout>
	</appender>
	
	<logger name="InfoLogger">
		<level value="INFO" />
		<appender-ref ref="InfoFileAppender" />
	</logger>

	<logger name="ErrorLogger">
		<level value="ERROR" />
		<appender-ref ref="ErrorFileAppender" />
	</logger>
	<root>

		<!--控制级别，由低到高: ALL|DEBUG|INFO|WARN|ERROR|FATAL|OFF-->
		<!--OFF:0-->
		<!--FATAL:FATAL-->
		<!--ERROR: ERROR,FATAL-->
		<!--WARN: WARN,ERROR,FATAL-->
		<!--INFO: INFO,WARN,ERROR,FATAL-->
		<!--DEBUG: INFO,WARN,ERROR,FATAL-->
		<!--ALL: DEBUG,INFO,WARN,ERROR,FATAL-->
		<level value="ALL" />
		<!--使用上面配置的那个规则，ref指定上面的规则名称-->
		<appender-ref ref="InfoFileAppender" />
		<appender-ref ref="ErrorFileAppender" />
	</root>
</log4net>